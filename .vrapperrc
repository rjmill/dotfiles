set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set smarttab 
set shiftround
set autoindent 
set smartindent 

set cam
set rxs
set novisualmouse

nnoremap ; :
vnoremap ; :

inoremap jf <esc>

nnoremap ,v <C-w>v

nnoremap ,s <C-w>s

" bindings for easy split nav
nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l

nnoremap ,, <c-^>
